<%- include("../layouts/header"); -%>
    <div class="card">
        <form method="post" action="/webinar" class="needs-validation" enctype="multipart/form-data" nonvalidate>
            <div class="form-group mb-3 mx-3">
                <label for="types">Types of</label>
                <select name="types" id="types">
                    <option value="webinar">webinar</option>
                    <option value="seminar">seminar</option>
                </select>
            </div>
            <div class="form-group mb-3 mx-3">
                <label for="types">Status</label>
                <select name="status" id="status">
                    <option value="Live">Live</option>
                    <option value="Recorded">Recorded</option>
                </select>
            </div>
            <div class="form-group mb-3 mx-3">
                <label for="category">Category</label>
                <select name="category" id="category">
                    <% categories.forEach(function(cat){ %>
                        <option value="<%=cat.nameofdepartment%>">
                            <%=cat.nameofdepartment%>
                        </option>
                        <% }); %>
                </select>
            </div>

            <div class="form-group mb-3 mx-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name of instructor" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-3 mx-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="title" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-3 mx-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="description" id="description" class="form-control" cols="30" rows="10"
                    placeholder="Description"></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="form-group mb-3 mx-3">
                <label for="webinartiming" class="form-label">Date</label>
                <input type="date" class="form-control" id="webinartiming" name="webinartiming" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-3 mx-3">
                <label for="time" class="form-label">Time</label>
                <input type="time" name="time" id="time" placeholder="Time" class="form-control" min="00:00" max="24:00"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-3 mx-3">
                <label for="duration" class="form-label">Duration</label>
                <input type="Number" name="duration" id="duration" placeholder="Time" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-3 mx-3">
                <label for="slug" class="form-label">slug detail</label>
                <input type="text" name="slug" id="slug" placeholder="Slug for Google SEO ranking" class="form-control"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-3 mx-3">
                <label for="seotitle" class="form-label">seotitle,must include it.</label>
                <input type="text" name="seotitle" id="seotitle" placeholder="Slug title must for Google SEO ranking"
                    class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-2 mx-3">
                <label for="image">Image</label>
                <input type="file" class="form-control" name="image" id="img">
            </div>
            <div class="button mb-2 mx-3">
                <button type="submit" class="btn btn-success">Add
                    Detail</button>
            </div>
        </form>
    </div>
    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>

    <%- include("../layouts/footer"); -%>