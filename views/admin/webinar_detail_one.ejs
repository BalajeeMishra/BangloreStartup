<%- include("../layouts/header"); -%>

    <section class="container-fluid py-5">
        <div class="row">
            <div class="col col-3">
                <%- include('../partials/adminSideBar')%>
            </div>
            <div class="col col-9">
                <div class="card">
                    <form method="post" action="/webinar" class="needs-validation" enctype="multipart/form-data"
                        nonvalidate>
                        <div class="form-group mb-3 mx-3">
                            <label for="types">Types of</label>
                            <select name="types" id="types">
                                <option value="Webinar">Webinar</option>
                                <option value="Seminar">Seminar</option>
                            </select>
                        </div>
                        <div class="form-group mb-3 mx-3">
                            <label for="types">Status</label>
                            <select name="status" id="status">
                                <option value="Live">Live</option>
                                <option value="Recorded">Recorded</option>
                            </select>
                        </div>
                        <div class="form-group mb-3 mx-3">
                            <label for="category">Category</label>
                            <select name="category" id="category">
                                <% categories.forEach(function(cat){ %>
                                    <option value="<%=cat.nameofdepartment%>">
                                        <%=cat.nameofdepartment%>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>

                        <div class="form-group mb-3 mx-3">
                            <label for="name">Name Of Instructor</label>
                            <select name="name" id="name">
                                <% portfolio.forEach(function(p){ %>
                                    <option value="<%=p.name%>">
                                        <%=p.name%>
                                    </option>
                                    <% }); %>
                            </select>
                            <span>Not found?
                                <a href="/portfolio">Add new instructor here</a>
                            </span>
                        </div>
                        <div class="form-group mb-3 mx-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="title"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group mb-3 mx-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea name="description" id="description" class="form-control" cols="30" rows="10"
                                placeholder="Description"></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="form-group mb-3 mx-3">
                            <label for="webinartiming" class="form-label">Date</label>
                            <input type="date" class="form-control" id="webinartiming" name="webinartiming" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group mb-3 mx-3">
                            <label for="time" class="form-label">Time</label>
                            <input type="time" name="time" id="time" placeholder="Time" class="form-control" min="00:00"
                                max="24:00" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group mb-3 mx-3">
                            <label for="duration" class="form-label">Duration</label>
                            <input type="Number" name="duration" id="duration" placeholder="Time" class="form-control"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group mb-3 mx-3">
                            <label for="slug" class="form-label">slug detail</label>
                            <input type="text" name="slug" id="slug" placeholder="Slug for Google SEO ranking"
                                class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group mb-3 mx-3">
                            <label for="seotitle" class="form-label">seotitle,must include it.</label>
                            <input type="text" name="seotitle" id="seotitle"
                                placeholder="Slug title must for Google SEO ranking" class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group mb-2 mx-3">
                            <label for="image">Image</label>
                            <input type="file" class="form-control" name="image" id="img">
                        </div>
                        <div class="button mb-2 mx-3">
                            <button type="submit" class="btn btn-success">Add
                                Detail</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <!-- Bootstrap Form Validation Plugin -->
    <%- include('../partials/form-validation') %>

        <%- include("../layouts/footer"); -%>